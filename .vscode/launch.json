{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++ Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [   
                "-box",
                "-title",
                "Veldu línu með örvalyklunum á lyklaborðinu:",
                "-pos", "middle", "center", 
                "-fg", "yellow", 
                "-bg", "green", 
                "-fg_sel", "green", 
                "-bg_sel", "yellow", 
                "-box",
                "-align", "center",
                "-margin", "0", "1",
                "-width", "35",
                "-descriptions",
                "Thessi duddi er ad reyna ad hamra saman þennan blessada koda.  Og nuna eru hlutirnir ad gerast",
                "Já, þetta er sko lína 1", 
                "...Og þetta lína 2", 
                "Þrír kemur á eftir einn og tveir", 
                "33 kemur bara út í bláinn",
                "-lines",
                "Lina1", 
                "Lína2", 
                "Þrír", 
                "Þrjátíu og þrír",
                "Þetta er Guðjón"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}